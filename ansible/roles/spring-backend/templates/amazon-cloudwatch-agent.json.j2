{
  "agent": {
    "metrics_collection_interval": 60,
    "run_as_user": "root"
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "/home/ec2-user/logs/{{ env_name }}/*.log",
            "log_group_name": "/aws/ec2/bt-portal-backend/{{ env_name }}",
            "log_stream_name": "{file_name}-{{ ansible_hostname }}",
            "retention_in_days": 7
          },
          {
            "file_path": "/var/log/nginx/access.log",
            "log_group_name": "/aws/ec2/bt-portal-backend/{{ env_name }}",
            "log_stream_name": "nginx-access-{{ ansible_hostname }}",
            "retention_in_days": 7
          },
          {
            "file_path": "/var/log/nginx/error.log",
            "log_group_name": "/aws/ec2/bt-portal-backend/{{ env_name }}",
            "log_stream_name": "nginx-error-{{ ansible_hostname }}",
            "retention_in_days": 7
          }
        ]
      }
    }
  }
}