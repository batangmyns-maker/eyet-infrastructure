{
  "agent": {
    "metrics_collection_interval": 60,
    "run_as_user": "root"
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "{{ log_path_prefix }}/{{ env_name }}/application.log",
            "log_group_name": "/aws/ec2/bt-portal-backend/{{ env_name }}",
            "log_stream_name": "application-{instance_id}",
            "retention_in_days": 7
          },
          {
            "file_path": "{{ log_path_prefix }}/{{ env_name }}/access.log",
            "log_group_name": "/aws/ec2/bt-portal-backend/{{ env_name }}",
            "log_stream_name": "access-{instance_id}",
            "retention_in_days": 7
          },
          {
            "file_path": "{{ log_path_prefix }}/{{ env_name }}/error.log",
            "log_group_name": "/aws/ec2/bt-portal-backend/{{ env_name }}",
            "log_stream_name": "error-{instance_id}",
            "retention_in_days": 7
          },
          {
            "file_path": "{{ log_path_prefix }}/{{ env_name }}/sql.log",
            "log_group_name": "/aws/ec2/bt-portal-backend/{{ env_name }}",
            "log_stream_name": "sql-{instance_id}",
            "retention_in_days": 7
          },
          {
            "file_path": "{{ log_path_prefix }}/{{ env_name }}/workflow-scheduler.log",
            "log_group_name": "/aws/ec2/bt-portal-backend/{{ env_name }}",
            "log_stream_name": "workflow-scheduler-{instance_id}",
            "retention_in_days": 7
          },
          {
            "file_path": "{{ log_path_prefix }}/{{ env_name }}/license-subscription-scheduler.log",
            "log_group_name": "/aws/ec2/bt-portal-backend/{{ env_name }}",
            "log_stream_name": "license-subscription-scheduler-{instance_id}",
            "retention_in_days": 7
          }
        ]
      }
    }
  }
}